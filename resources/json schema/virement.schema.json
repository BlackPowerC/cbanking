{
	"$schema": "http://json-schema.org/schema#",
	"title": "Virement",
	"description": "Information d'un virement",
	"type":"object",
	"properties":
	{
        "src":
		{
			"description":"Identifiant du compte source",
			"type":"integer",
            "minimum":1
		},
		"date":
		{
			"description":"La date de la transaction",
			"type":"string",
			"pattern":"^[0-9]{2}-[0-9]{2}-[0-9]{4} [0-9]{2}:[0-9]{2}:[0-9]{2}$"
		},
		"balance":
		{
			"description": "Le montant de la transaction",
			"type":"number",
            "minimum":1
		},
		"dest":
		{
			"description":"Identifiant du compte destinataire",
			"type":"integer",
            "minimum":1
		}
	},
    "required": ["src", "dest", "balance", "date"]
}