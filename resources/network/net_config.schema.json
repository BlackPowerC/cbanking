{
	"$schema": "http://json-schema.org/schema#",
	"title": "Network configuration",
	"description": "fichier de configuration du réseau de l'API REST",
	"type":"object",
	"properties":
	{
    "host":
    {
      "type":"string",
      "description":"Nom d'hôte ou IP"
    },
    "port":
    {
      "type":"number",
      "description":"Le port d'écoute de l'API",
      "minimum":"8181"
    }
	},
	"required": ["host", "port"]
}
